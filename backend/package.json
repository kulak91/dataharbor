{
  "name": "backend",
  "type": "module",
  "private": true,
  "scripts": {
    "lint:type": "npx tsc --noEmit",
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "dev": "nodemon --env-file .env -e ts,json --exec \"node --loader ts-paths-esm-loader\" src/index.ts",
    "start": "node --env-file .env ./src/index.js",
    "migrate:help": "node --env-file .env --loader ts-paths-esm-loader ./migrate.ts --help",
    "migrate:up": "node --env-file .env --loader ts-paths-esm-loader ./migrate.ts up",
    "migrate:make": "node --env-file .env --loader ts-paths-esm-loader ./migrate.ts create --name new-migration.ts"
  },
  "engines": {
    "node": "20.x.x",
    "npm": "10.x.x"
  },
  "license": "ISC",
  "dependencies": {
    "bcrypt": "5.1.1",
    "convict": "6.2.4",
    "cors": "2.8.5",
    "express": "4.18.2",
    "express-validation": "4.1.0",
    "jose": "5.0.2",
    "pg": "8.11.3",
    "pg-hstore": "2.3.4",
    "pino": "8.16.1",
    "pino-pretty": "10.2.3",
    "sequelize": "6.35.0",
    "umzug": "3.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.1",
    "@types/convict": "6.1.5",
    "@types/cors": "2.8.16",
    "@types/express": "4.17.21",
    "nodemon": "3.0.1",
    "ts-node": "10.9.1",
    "ts-paths-esm-loader": "1.4.1",
    "tsconfig-paths": "3.12.0"
  }
}
